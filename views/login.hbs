{{#section 'loginCss'}}
    <link rel="stylesheet" href="stylesheets/login.css">
{{/section}}

    <!--中间盒子div-->
    <div class="loginBox">
        <div class="loginTitle">登录</div>

        <!--表单区域-->
        <div class="formArea">

        <form class="form-horizontal" role="form">
                <!--第一行-->
                <div class="form-group">
                    <label for="username" class="col-sm-4 control-label">用户名</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="username" name="username" placeholder="请输入用户名">
                    </div>
                </div>

                <!--第二行-->
                <div class="form-group">
                    <label for="password" class="col-sm-4 control-label">密&nbsp;&nbsp;&nbsp;码</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
                    </div>
                </div>

                <!--第三行 验证码-->
                <div class="form-group">
                    <div class="col-sm-5 col-sm-offset-2">
                        <input type="text" class="form-control" id="passsure" name="passsure" placeholder="请输入验证码">
                    </div>
                    <div class="col-sm-5">
                        <div style="cursor: pointer" onclick="changeyanzhengma();"><img src="/yanzhengma?width=120&height=40"  id="yanzhengma" alt="验证码"></div>
                    </div>
                </div>

                <!--提交按钮-->
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-1">
                        <button type="submit" class="btn btn-default btncss">登&nbsp;&nbsp;&nbsp;录</button>
                    </div>
                </div>


            </form>

        </div>

    </div>

{{#section 'loginJs'}}
    <script src="javascript/login.js"></script>
{{/section}}
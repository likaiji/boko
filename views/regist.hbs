{{#section 'loginCss'}}
    <link rel="stylesheet" href="stylesheets/login.css">
{{/section}}

<!--中间盒子div-->
<div class="loginBox">
    <div class="loginTitle">注册</div>

    <!--表单区域-->
    <div class="formArea">

        <form class="form-horizontal" role="form">
            <!--第一行-->
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">用户名</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="username" name="username" placeholder="请输入用户名">
                </div>
            </div>

            <!--第二行-->
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">密&nbsp;&nbsp;&nbsp;码</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
                </div>
            </div>

            <!--第三行-->
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">确认密码</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="passwordsure" name="passwordsure" placeholder="再次输入密码">
                </div>
            </div>

            <!--第四行-->
            <div class="form-group">
                <label for="sex" class="col-sm-4 control-label">性别</label>
                <div class="col-sm-8">
                    <input class="select" name="sex" type="radio" value="男" checked/>男
                    <input class="select" name="sex" type="radio" value="女"/>女
                    <input class="select" name="sex" type="radio" value="保密"/>保密
                </div>
            </div>

            <!--第五行-->
            <div class="form-group">
                <label for="phone" class="col-sm-4 control-label">电话</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="电话">
                </div>
            </div>

            <!--第六行 验证码-->
            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-2">
                    <input type="text" class="form-control" id="passsure" name="passsure" placeholder="请输入验证码">
                </div>
                <div class="col-sm-5">
                    <div style="cursor: pointer" onclick="changeyanzhengma();"><img src="/yanzhengma?width=120&height=40"  id="yanzhengma" alt="验证码"></div>
                </div>
            </div>

            <!--提交按钮-->
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                    <button type="submit" class="btn btn-default btncss">登&nbsp;&nbsp;&nbsp;录</button>
                </div>
            </div>


        </form>

    </div>

</div>

{{#section 'registJs'}}
    <script src="javascript/regist.js"></script>
{{/section}}
{{#section "userDetailCss"}}
    <link rel="stylesheet" href="stylesheets/changeUserData.css">
{{/section}}

<!--昵称 用户名部分-->
<div class="usernameArea">
    <form action="/updateUser" method="post">
        <!--头像部分-->
        <div class="userImgArea">
            <div class="userImg"><img src="{{aaa.userimg}}" alt="me" width="100%" height="100%" id="userPhoto" name="userPhoto"></div>
            <div class="userImgChange">
                <a href="#">
                    <input type="file" value="浏览" id="changePhoto"/><span>更换头像</span>
                </a>
            </div>
        </div>
        <p>昵称:<span>{{aaa.username}}</span></p>
        <p>性别:
            <span>
                <input name="sex" type="radio" value="男" checked/>男
                <input name="sex" type="radio" value="女"/>女
                <input name="sex" type="radio" value="保密"/>保密
            </span>
        </p>
        <p>电话号码:<span><input type="text" value="{{aaa.phone}}" name="phone"></span></p>
        <p>密码:<span><input type="text" value="{{aaa.pwd}}" name="password"></span></p>
        <p><input type="submit" value="提交" style="width:100px;background-color: #42C02E;border: 0px solid red;color:white"/></p>
        <p><input type="text" name="userImgUrl" id="userImgUrl" style="display: none;"></p>
    </form>
</div>

{{#section "changeUserDataJs"}}
    <script src="javascript/changeUserData.js"></script>
{{/section}}